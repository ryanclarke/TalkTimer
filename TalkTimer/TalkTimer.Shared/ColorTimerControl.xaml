<UserControl x:Class="TalkTimer.ColorTimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TalkTimer"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FontFamily="Monospace"
             d:DesignHeight="900"
             d:DesignWidth="1366">

    <Grid x:Name="ColorBox"
          Tapped="ColorBox_Tapped">
        <Viewbox Stretch="Uniform"
                 StretchDirection="Both"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Canvas x:Name="PlayControl"
                        Width="76"
                        Height="76">
                    <Path Width="20.5832"
                          Height="31.6667"
                          Canvas.Left="30.0833"
                          Canvas.Top="22.1667"
                          Stretch="Fill"
                          Fill="#33FFFFFF"
                          Data="F1 M 30.0833,22.1667L 50.6665,37.6043L 50.6665,38.7918L 30.0833,53.8333L 30.0833,22.1667 Z " />
                </Canvas>
                <Canvas x:Name="appbar_control_pause"
                        Visibility="Collapsed"
                        Width="76"
                        Height="76">
                    <Path Width="22.1667"
                          Height="28.5"
                          Canvas.Left="26.9167"
                          Canvas.Top="23.75"
                          Stretch="Fill"
                          Fill="#33FFFFFF"
                          Data="F1 M 26.9167,23.75L 33.25,23.75L 33.25,52.25L 26.9167,52.25L 26.9167,23.75 Z M 42.75,23.75L 49.0833,23.75L 49.0833,52.25L 42.75,52.25L 42.75,23.75 Z " />
                </Canvas>
                <Canvas x:Name="appbar_control_resume"
                        Visibility="Collapsed"
                        Width="76"
                        Height="76">
                    <Path Width="31.6665"
                          Height="31.6667"
                          Canvas.Left="26.9167"
                          Canvas.Top="22.1667"
                          Stretch="Fill"
                          Fill="#33FFFFFF"
                          Data="F1 M 38,22.1667L 58.5832,37.6043L 58.5832,38.7918L 38,53.8333L 38,22.1667 Z M 33.25,22.1667L 33.25,53.8333L 26.9167,53.8333L 26.9167,22.1667L 33.25,22.1667 Z " />
                </Canvas>
                <Canvas x:Name="appbar_control_stop"
                        Visibility="Collapsed"
                        Grid.Row="1"
                        Width="76"
                        Height="76">
                    <Rectangle Width="28.5"
                               Height="28.5"
                               Canvas.Left="23.75"
                               Canvas.Top="23.75"
                               Stretch="Fill"
                               Fill="#33FFFFFF" />
                </Canvas>
                <Canvas Grid.Row="0"
                        Width="76"
                        Height="76">
                </Canvas>
                <Canvas Grid.Row="1"
                        Width="76"
                        Height="76">
                </Canvas>
                <Canvas Grid.Row="2"
                        Width="76"
                        Height="76">
                </Canvas>
            </Grid>
        </Viewbox>
            <Viewbox Stretch="Uniform"
                     StretchDirection="Both"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,-100">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="LineHeight"
                                    Value="1100" />
                            <Setter Property="LineStackingStrategy"
                                    Value="BlockLineHeight" />
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock x:Name="LargeNumber"
                               ManipulationMode="All"
                               ManipulationDelta="LargeNumber_ManipulationDelta"
                               ManipulationCompleted="LargeNumber_ManipulationCompleted"
                               Foreground="DarkSlateGray"
                               Text="0"
                               FontSize="1000" />
                    <TextBlock x:Name="SmallNumber"
                               Foreground="DarkSlateGray"
                               Text="00"
                               FontSize="100" />
                </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
